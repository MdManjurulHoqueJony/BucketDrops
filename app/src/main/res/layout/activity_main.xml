<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.wordpress.jonyonandroidcraftsmanship.bucketdrops.MainActivity">

    <ImageView
        android:id="@+id/ivBackground"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    
    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar" />

    <com.wordpress.jonyonandroidcraftsmanship.bucketdrops.widgets.BucketRecyclerView
        android:id="@+id/rvDrops"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbar"
        app:layoutManager="android.support.v7.widget.LinearLayoutManager" />

    <include
        android:id="@+id/emptyDrops"
        layout="@layout/empty_drops" />
</RelativeLayout>
